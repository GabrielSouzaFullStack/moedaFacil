{
  "version": 2,
  "buildCommand": "bash ./build.sh",
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.7.4"
    },
    {
      "src": "api/diagnostico.php",
      "use": "vercel-php@0.7.4"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/diagnostico",
      "dest": "/api/diagnostico.php"
    },
    {
      "src": "/debug",
      "dest": "/api/diagnostico.php"
    },
    {
      "src": "/(css|js|img|styles)/(.+)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "API_BASE_URL": "https://economia.awesomeapi.com.br/last/",
    "APP_ENV": "production"
  }
}