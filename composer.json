{
    "name": "moeda-facil/projeto",
    "description": "Sistema de cotações de moedas",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "app/core/",
            "app/controllers/",
            "app/models/"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true
    },
    "scripts": {
        "vercel-build": "composer dump-autoload --optimize --classmap-authoritative",
        "post-install-cmd": [
            "composer dump-autoload --optimize --classmap-authoritative"
        ],
        "post-update-cmd": [
            "composer dump-autoload --optimize --classmap-authoritative"
        ]
    }
}