{
  "private": true,
  "scripts": {
    "build": "echo 'Starting build process...' && npm run install-composer && npm run composer-install",
    "install-composer": "php -r \"copy('https://getcomposer.org/installer', 'composer-setup.php');\" && php composer-setup.php && php -r \"unlink('composer-setup.php');\"",
    "composer-install": "php composer.phar install --no-dev --optimize-autoloader"
  }
}